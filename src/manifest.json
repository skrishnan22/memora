{
  "manifest_version": 3,
  "name": "Memora",
  "version": "1.0.0",
  "description": "A Chrome extension for vocabulary training",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Memora"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "38": "icon-38.png",
    "128": "icon-128.png"
  }
}
