{
  "manifest_version": 3,
  "name": "Lexmora",
  "version": "1.0.0",
  "description": "A Chrome extension for vocabulary training",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lexmora"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icons/*", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "38": "icons/icon-38.png",
    "128": "icons/icon-128.png"
  }
}
